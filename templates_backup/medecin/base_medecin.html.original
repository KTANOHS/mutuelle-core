<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Espace Médecin - Cabinet Médical{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    
    <style>
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #2c3e50 0%, #3498db 100%);
            color: white;
        }
        .sidebar .nav-link {
            color: white;
            padding: 12px 20px;
            margin: 5px 0;
            border-radius: 5px;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }
        .sidebar .nav-link.active {
            background-color: #e74c3c;
        }
        .main-content {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding: 20px;
        }
        .medecin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            text-align: center;
        }
        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
            border-radius: 10px;
        }
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px 10px 0 0 !important;
        }
    </style>
    
    {% block extra_css %}{% endblock %}
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0 d-flex flex-column">
                <div class="medecin-header">
                    <h5><i class="bi bi-heart-pulse"></i> Espace Médecin</h5>
                    <p class="mb-0 small">
                        {% if user.is_authenticated %}
                            Dr. {{ user.get_full_name|default:user.username }}
                        {% else %}
                            Non connecté
                        {% endif %}
                    </p>
                </div>
                
                <nav class="nav flex-column flex-grow-1 p-3">
                    <a class="nav-link {% if request.resolver_match.url_name == 'dashboard' %}active{% endif %}" 
                       href="{% url 'medecin:dashboard' %}">
                        <i class="bi bi-speedometer2"></i> Tableau de Bord
                    </a>
                    <a class="nav-link {% if request.resolver_match.url_name == 'mes_rendez_vous' %}active{% endif %}" 
                       href="{% url 'medecin:mes_rendez_vous' %}">
                        <i class="bi bi-calendar-check"></i> Mes Rendez-vous
                    </a>
                    <a class="nav-link {% if request.resolver_match.url_name == 'liste_bons' %}active{% endif %}" 
                       href="{% url 'medecin:liste_bons' %}">
                        <i class="bi bi-file-medical"></i> Bons de Soin
                    </a>
                    <a class="nav-link {% if request.resolver_match.url_name == 'creer_ordonnance' %}active{% endif %}" 
                       href="{% url 'medecin:creer_ordonnance' %}">
                        <i class="bi bi-prescription2"></i> Créer Ordonnance
                    </a>
                    <a class="nav-link {% if request.resolver_match.url_name == 'historique_ordonnances' %}active{% endif %}" 
                       href="{% url 'medecin:historique_ordonnances' %}">
                        <i class="bi bi-clock-history"></i> Historique
                    </a>
                    <a class="nav-link {% if request.resolver_match.url_name == 'profil_medecin' %}active{% endif %}" 
                       href="{% url 'medecin:profil_medecin' %}">
                        <i class="bi bi-person-circle"></i> Mon Profil
                    </a>
                    
                    <div class="mt-auto">
                        <a class="nav-link text-warning" href="{% url 'logout' %}">
                            <i class="bi bi-box-arrow-right"></i> Déconnexion
                        </a>
                    </div>
                </nav>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 main-content">
                <!-- Messages -->
                {% if messages %}
                <div class="messages mb-4">
                    {% for message in messages %}
                    <div class="alert alert-{{ message.tags }} alert-dismissible fade show" role="alert">
                        <i class="bi bi-{% if message.tags == 'success' %}check-circle{% elif message.tags == 'error' %}exclamation-triangle{% else %}info-circle{% endif %}"></i>
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
                
                <!-- En-tête de page -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-primary">{% block page_title %}{% endblock %}</h2>
                    <div class="text-muted">
                        {% block page_actions %}{% endblock %}
                    </div>
                </div>
                
                <!-- Contenu principal -->
                {% block content %}
                <!-- Le contenu spécifique à chaque page viendra ici -->
                {% endblock %}
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Scripts communs -->
    <script>
        // Activer les tooltips Bootstrap
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
        
        // Auto-dismiss alerts après 5 secondes
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
    
    {% block extra_js %}{% endblock %}
</body>
</html>