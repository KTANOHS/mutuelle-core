{% block extra_scripts %}
<script>
// Mise à jour de l'heure en temps réel
function updateCurrentTime() {
    const now = new Date();
    const timeString = now.toLocaleTimeString('fr-FR', { 
        hour: '2-digit', 
        minute: '2-digit',
        second: '2-digit'
    });
    document.getElementById('current-time').textContent = timeString;
}

// Charger les derniers bons via API
function loadDerniersBons() {
    fetch('{% url "agents:api_derniers_bons" %}')
        .then(response => {
            if (!response.ok) throw new Error('Erreur réseau');
            return response.json();
        })
        .then(data => {
            const tbody = document.getElementById('derniers-bons');
            
            if (data.bons && data.bons.length > 0) {
                tbody.innerHTML = '';
                data.bons.forEach(bon => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td><code class="text-primary">${bon.code}</code></td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm bg-light rounded me-2">
                                    <i class="fas fa-user text-muted p-2"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">${bon.membre_nom}</div>
                                </div>
                            </div>
                        </td>
                        <td><small>${bon.date_creation}</small></td>
                        <td><small class="${bon.statut_class === 'danger' ? 'text-danger' : 'text-success'}">${bon.date_expiration}</small></td>
                        <td><span class="fw-bold">${bon.montant_max} FCFA</span></td>
                        <td>
                            <span class="badge bg-${bon.statut_class}">
                                ${bon.statut}
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary" 
                                        onclick="afficherDetailsBon(${bon.id})"
                                        title="Voir les détails">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
            }
        })
        .catch(error => {
            console.error('Erreur lors du chargement des bons:', error);
        });
}

// Afficher les détails d'un bon
function afficherDetailsBon(bonId) {
    fetch(`/agents/api/bons/${bonId}/`)
        .then(response => response.json())
        .then(data => {
            const modalContent = document.getElementById('bon-details-content');
            modalContent.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <h6>Informations du Bon</h6>
                        <table class="table table-sm">
                            <tr><td><strong>Code:</strong></td><td>${data.code}</td></tr>
                            <tr><td><strong>Membre:</strong></td><td>${data.membre_nom}</td></tr>
                            <tr><td><strong>Montant max:</strong></td><td>${data.montant_max} FCFA</td></tr>
                            <tr><td><strong>Statut:</strong></td><td><span class="badge bg-${data.statut_class}">${data.statut}</span></td></tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>Dates</h6>
                        <table class="table table-sm">
                            <tr><td><strong>Création:</strong></td><td>${data.date_creation}</td></tr>
                            <tr><td><strong>Expiration:</strong></td><td>${data.date_expiration}</td></tr>
                            <tr><td><strong>Temps restant:</strong></td><td>${data.temps_restant}</td></tr>
                        </table>
                    </div>
                </div>
                ${data.motif_consultation ? `
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Motif de consultation</h6>
                        <p class="text-muted">${data.motif_consultation}</p>
                    </div>
                </div>
                ` : ''}
            `;
            
            const modal = new bootstrap.Modal(document.getElementById('bonDetailsModal'));
            modal.show();
        })
        .catch(error => {
            console.error('Erreur:', error);
            alert('Erreur lors du chargement des détails du bon');
        });
}

// Mettre à jour les statistiques en temps réel
function updateStats() {
    fetch('{% url "agents:api_stats_quotidiens" %}')
        .then(response => response.json())
        .then(data => {
            if (data.bons_du_jour !== undefined) {
                document.getElementById('bons-du-jour').textContent = data.bons_du_jour;
                document.getElementById('limite-restante').textContent = data.limite_restante;
            }
            if (data.verifications_du_jour !== undefined) {
                document.getElementById('verifications-du-jour').textContent = data.verifications_du_jour;
            }
            
            // Mettre à jour le score de performance
            if (data.limite_totale > 0) {
                const pourcentage = Math.round((data.bons_du_jour / data.limite_totale) * 100);
                document.getElementById('performance-score').textContent = `${pourcentage}%`;
            }
        })
        .catch(error => {
            console.error('Erreur lors de la mise à jour des stats:', error);
        });
}

// Initialisation
document.addEventListener('DOMContentLoaded', function() {
    // Mettre à jour l'heure
    updateCurrentTime();
    setInterval(updateCurrentTime, 1000);
    
    // Charger les données initiales
    loadDerniersBons();
    
    // Mettre à jour périodiquement
    setInterval(loadDerniersBons, 30000); // Toutes les 30 secondes
    setInterval(updateStats, 60000); // Toutes les minutes
    
    // Analytics avancés (optionnel)
    setTimeout(() => {
        fetch('{% url "agents:api_analytics_dashboard" %}')
            .then(response => response.json())
            .then(data => {
                console.log('Analytics dashboard:', data);
                // Vous pouvez utiliser ces données pour des graphiques avancés
            })
            .catch(error => console.error('Erreur analytics:', error));
    }, 5000);
});

// Gestion des erreurs globales
window.addEventListener('error', function(e) {
    console.error('Erreur globale:', e.error);
});
</script>

