.border-start-info { border-left-color: #36b9cc !important; }
.border-start-warning { border-left-color: #f6c23e !important; }

.shadow {
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}
